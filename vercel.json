{
  "version": 2,
  "name": "my-portfolio",
  "buildCommand": "npm run build --filter=@portfolio/web --include-dependencies",
  "installCommand": "npm ci --include-workspace-root --workspaces",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_SITE_URL": "https://myportfolio.mysticdatanode.net",
    "NEXT_PUBLIC_API_BASE_URL": "https://myportfolio.mysticdatanode.net/api"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "regions": ["iad1"]
}