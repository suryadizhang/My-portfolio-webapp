{
  "name": "portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.4.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "cd apps/service-python && uvicorn app.main:app --reload --port 8000",
    "build:rag": "cd apps/service-python && python scripts/build_rag_index.py",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:python": "cd apps/service-python && pytest -q",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "node server.js",
    "start:production": "NODE_ENV=production node server.js",
    "lint:fix": "turbo lint --fix",
    "check": "npm run typecheck && npm run lint && npm run test",
    "docker:smoke": "docker build -q . && node -e \"require.resolve('@portfolio/ui'); require.resolve('@portfolio/utils')\"",
    "preflight": "node scripts/preflight.js",
    "preflight:ps": "powershell -ExecutionPolicy Bypass -File scripts/preflight.ps1",
    "prepush": "npm run preflight",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@turbo/gen": "^1.12.4",
    "husky": "^9.1.7",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=20.11.1",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/nodemailer": "^7.0.1",
    "@vercel/og": "^0.8.5",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.6",
    "resend": "^6.1.0",
    "tsup": "^8.3.0"
  }
}
