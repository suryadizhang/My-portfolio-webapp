{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@ui": ["../../packages/ui/src"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@utils": ["../../packages/utils/src"],
      "@utils/*": ["../../packages/utils/src/*"],
      "@config": ["../../packages/config"],
      "@config/*": ["../../packages/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app/**/*"
  ]
}